<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.Views.Home">
    <ContentPage.Content>
        <StackLayout x:Name="stack_principal">
            <Label Margin="30, 30, 0, 0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Olá, " FontFamily="StellaNova" FontSize="25" TextColor="#111"/>
                        <Span Text="{Binding Nome}" FontFamily="StellaNova" FontSize="25" TextColor="#111"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label Text="Suas Contas"
                   FontSize="25"
                   FontFamily="StellaNova"
                   Margin="30, 20, 0, 0" TextColor="#111"/>

            <StackLayout x:Name="stack_no_account"
                         HorizontalOptions="Center" Margin="0, 50">
                <Image x:Name="img_no_account"/>

                <Label Text="Nenhuma conta..."
                       FontSize="25"
                       FontFamily="StellaNova"
                       Margin="30, 0"
                       TextColor="#111"/>
            </StackLayout>

            <Button Style="{StaticResource Button1}" HorizontalOptions="Center" Text="Criar Conta" x:Name="btn_criarConta" Clicked="CriarContaClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>