<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.Views.Home">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="30, 30, 0, 0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Olá, " FontFamily="StellaNova" FontSize="25" TextColor="#111"/>
                        <Span Text="{Binding Nome}" FontFamily="StellaNova" FontSize="25" TextColor="#111"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label Text="Carteira"
                   FontSize="25"
                   FontFamily="StellaNova"
                   Margin="30, 20, 0, 0" TextColor="#111"/>

            <Frame Margin="30, 30, 30, 0"
                   HeightRequest="100"
                   CornerRadius="20"
                   BackgroundColor="#00cc73">

                <StackLayout>
                    <Label Text="Conta Corrente" FontFamily="StellaNova" TextColor="#eee"
                       FontSize="20"/>

                    <Label Text="R$ 5.000,00" FontFamily="StellaNova" TextColor="#eee" FontSize="30"/>
                </StackLayout>

            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>