<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.Views.Welcome"
             BackgroundColor="#00cc73">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Style="{StaticResource Titulo}"
                           Text="Banco Digitall"
                           TextColor="#eeeeee"
                           HorizontalTextAlignment="Center"/>

                <Label Style="{StaticResource SubTitulo}"
                           Text="github.com/smokeeaasd"
                           TextColor="#eeeeee"
                           HorizontalTextAlignment="Center"/>
            </StackLayout>

            <Button Style="{StaticResource TextButton1}"
                        Text="Próximo"
                        x:Name="btn_proximo"
                    HorizontalOptions="End"
                    TextColor="#eee"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>