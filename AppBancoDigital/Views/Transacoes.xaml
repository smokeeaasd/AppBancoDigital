<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.Views.Transacoes"
			 xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
			 BackgroundColor="#000000">
    <ContentPage.Content>
		<ScrollView>
			<StackLayout>
				<StackLayout Margin="30, 25">
					<Label Text="Binding Tipo" FontFamily="OpenSans" TextColor="#ffffff" FontSize="17.5"/> 
					<Label Text="Binding Saldo" FontFamily="StellaNova" TextColor="#ffffff" FontSize="25"/>
				</StackLayout>
				<yummy:PancakeView CornerRadius="50, 50, 0, 0" VerticalOptions="FillAndExpand">
					<StackLayout BackgroundColor="#ffffff">
						<Label Text="Transações" FontFamily="StellaNova" TextColor="#000000" FontSize="25" Margin="30, 50"/> 

						<StackLayout x:Name="stack_transacoes">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Frame>
									</Frame>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>
					</StackLayout>
				</yummy:PancakeView>
			</StackLayout>
		</ScrollView>
    </ContentPage.Content>
</ContentPage>